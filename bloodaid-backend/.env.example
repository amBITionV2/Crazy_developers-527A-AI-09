# BloodAid Backend Environment Configuration

# Application Settings
APP_NAME=BloodAid Backend
APP_VERSION=1.0.0
DEBUG=true
ENVIRONMENT=development

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=true

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/bloodaid_db
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=bloodaid_db
DATABASE_USER=username
DATABASE_PASSWORD=password

# Security Settings
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000,http://127.0.0.1:5173
ALLOWED_CREDENTIALS=true
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALLOWED_HEADERS=*

# Firebase Configuration
FIREBASE_CREDENTIALS_PATH=path/to/firebase-service-account.json
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_STORAGE_BUCKET=your-project.appspot.com

# AI/ML Configuration
OPENAI_API_KEY=your-openai-api-key-here
GROK_API_KEY=your-grok-api-key-here
GROK_API_BASE=https://api.x.ai/v1
DEFAULT_AI_MODEL=grok-beta
ENABLE_RAG=true
CHROMADB_PERSIST_DIRECTORY=./data/chromadb

# External APIs
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password
EMAIL_FROM=noreply@bloodaid.app

# Redis Configuration (Optional for caching)
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Monitoring and Logging
LOG_LEVEL=INFO
ENABLE_PROMETHEUS=false
PROMETHEUS_PORT=8001

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB
UPLOAD_DIRECTORY=./uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60  # seconds

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30  # seconds
ENABLE_HEALTH_CHECKS=true

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30