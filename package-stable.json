{
  "name": "raktakosh-connect-stable",
  "version": "1.0.0",
  "scripts": {
    "dev": "vite --config vite.config.stable.ts",
    "dev-stable": "vite --config vite.config.stable.ts --host 0.0.0.0 --port 5173",
    "build": "vite build --config vite.config.stable.ts",
    "build-stable": "vite build --config vite.config.stable.ts --mode production",
    "preview": "vite preview --config vite.config.stable.ts",
    "start-backend": "cd bloodaid-backend && python -m uvicorn app.main:app --host 0.0.0.0 --port 8003",
    "start-both": "concurrently \"npm run start-backend\" \"npm run dev-stable\"",
    "pm2-start": "pm2 start ecosystem.config.json",
    "pm2-stop": "pm2 stop ecosystem.config.json",
    "pm2-restart": "pm2 restart ecosystem.config.json",
    "pm2-status": "pm2 status",
    "pm2-logs": "pm2 logs",
    "pm2-monit": "pm2 monit",
    "health-check": "curl http://localhost:8003/health && curl http://localhost:5173"
  }
}